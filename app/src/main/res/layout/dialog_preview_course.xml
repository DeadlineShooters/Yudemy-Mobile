<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogs.PreviewCourseDialog">

    <androidx.media3.ui.PlayerView
        android:id="@+id/previewVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        app:controller_layout_id="@layout/custom_video_controller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:player_layout_id="@layout/exo_player_view"
        app:show_buffering="when_playing"
        app:show_shuffle_button="true"
        app:use_controller="true">

        <TextView
            android:id="@+id/btnClosePreview"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_close_24"
            android:drawableTint="@color/gray_100"/>

    </androidx.media3.ui.PlayerView>
</androidx.constraintlayout.widget.ConstraintLayout>