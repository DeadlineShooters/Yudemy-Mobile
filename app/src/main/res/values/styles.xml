<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleFragment" parent="Theme.Yudemy">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_color</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_150</item>
        <!-- inactive track color -->
        <item name="android:colorForeground">@color/gray_400</item>
    </style>

    <style name="FrequencyDayTime" parent="Theme.Yudemy">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:drawableTint">@color/primary_color</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="FrequencyTimeDetail" parent="Theme.Yudemy">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@color/primary_color</item>
    </style>

    <style name="MyEditTextNoUnderline" parent="MyEditText">
        <item name="android:background">@drawable/bg_edittext_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyBlackButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_500</item>
        <item name="android:background">@color/gray_500</item>
    </style>

    <style name="WarningCloseAccText" parent="Theme.Yudemy">
        <item name="android:textColor">@color/red_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- MaterialAlertDialog styles -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="MaterialAlertDialog.Button.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MaterialAlertDialog.Button.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyToolbarTitle" parent="Theme.Yudemy">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="StandardBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StandardBottomSheet</item>
    </style>

    <style name="ShapeAppearance.StandardBottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
</resources>